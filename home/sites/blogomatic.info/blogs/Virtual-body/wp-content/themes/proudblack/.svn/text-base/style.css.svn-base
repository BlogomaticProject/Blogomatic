	background:url(images/sidebarbck.gif) repeat-y;
	width:280px;
}

.tab_content {
	margin-bottom:7px;
	padding-bottom:7px;
}

#tab_content ul li{
	font-size:12px;
	margin-left:8px;
	margin-right:8px;
	border-bottom:1px solid #efefef;
	padding:6px 5px 4px 5px;
}

#tab_content .tags ul li{
	border:0;
}

#tab_content .meta{
	color:#999;
	font-size:11px;
}

#tab_content .title{
