/* =================== MAIN STRUCTURE ======================= */

body{
	background: #f2f2f2;
	color:#666;
}

a{
	color:#0a8ed2;
	text-decoration:none;
}

a:hover {
	text-decoration:underline;
}

small {
	font-size: 11px;
}

code {
	background: #fcfbf2;
}

#header{
	height:120px;
	background:url(images/headbck.png) repeat-x;
	border-bottom:1px solid #fff;
}

#empty{
	height:20px;	
}

#video p{
		text-align: center;
}

.video-icon a img {
	margin-bottom:10px;
	padding: 10px 0px;
}

#topmenu {
	margin:0;
	padding:0;
	float:right;
	width: 240px;
}

#topmenu ul {
	float:right;
	font-size:15px;
	padding: 0;
	margin: 0;
	list-style: none;
}

#topmenu ul li.current_page_item a{
	background-color:#454545;
	color:#ddd;
}

#topmenu ul li a:hover{
	background-color:#454545;
	color:#ddd;
}

#topmenu li {
	float: left;
	padding:0 5px;
	margin:0;
}

#topmenu a {
	display: block;
	color: #fff;
	text-decoration:none;
	padding:15px 5px 2px 5px;
}

#topmenu li ul {
	position: absolute;
	width: 190px;
	left: -999em;
}

#topmenu li ul li a {
	font-size:12px;
	background-color:#454545;
	color: #fff;
	padding:9px 6px;
	width: 120px;
	margin:0 0 0 -5px;
}

#topmenu li ul li a:hover{
	background-color:#343434;
}

#topmenu li ul ul {
	margin: -36px 0 0 127px;
}

#topmenu li ul ul li a {
	background-color:#3c3c3c;
	font-size:11px;
}

#topmenu li:hover ul ul, #topmenu li.sfhover ul ul {
	left: -999em;
}

#topmenu li:hover ul, #topmenu li li:hover ul, #topmenu li.sfhover ul, #topmenu li li.sfhover ul {
	left: auto;
}

#topmenu li:hover ul, #topmenu li.sfhover ul {
	left: auto;
}

#logo h1{
	font-size:30px;
	line-height:30px;
	margin:25px 0 0 0;
	color:#fff;
}

#logo h1 a{
	color:#fff;
	text-decoration:none;
}

#logo h1 a:hover{
	text-decoration:none;
}

#logo .description{
	color:#777;
}

#searchform{
	float:right;
	margin:35px 10px 0 0;
}

#rssfeed{
	float:right;
	margin:3px 10px 0 0;
}

#rssfeed a.rss{
	background: transparent url(images/rss.gif) no-repeat left top;
	padding-left: 20px;
}

#rssfeed a {
	color: #fff;
	text-decoration:none;
}

#rssfeed a:hover{
	text-decoration: underline;
}

/* ===================== VIDEOBLOG AREA =================== */

#content{
	margin:20px 0 0 0;
}

#video-top{
	background:url(images/videotop.gif) no-repeat;
	height:46px;
}

#video-area{
	background: url(images/videobck.gif) repeat-y;
}

#video-bottom{
	background:url(images/videobottom.gif) no-repeat;
	height:20px;
	padding-bottom: 15px;
}

.videopost{
	margin:0 15px 0 15px;
	padding:15px;
	/*border-bottom:1px solid #efefef;*/
}

.videopost .videopost-title{
	font-family:Georgia,"Times New Roman", Serif;
	margin:0;
	padding:0;
	font-size:24px;
	line-height:30px;
}

.videopost .videopost-meta-top{
	font-size:11px;
	color:#888;
}

.videopost .videopost-date{
	float:left;		
	margin-bottom:10px;
	background:url(images/clock.gif) no-repeat;
	padding-left:17px;
}

.videopost .videopost-comments{
	float:right;
	background:url(images/comicon.jpg) no-repeat 0 60%;
	padding-left:18px;
}

.videopost .videopost-category{
	clear:both;
	margin-bottom:10px;
	padding: 10px 0px;
}

.videopost .videopost-category a{
	font-weight: bold;
	color: #999999;
	padding: 2px 10px;
	background: #efefef;
	-moz-border-radius: 8px;
	-webkit-border-radius: 8px;
	text-decoration:none;
	border:1px solid #e0e0e0;
}

.videopost .videopost-category a:hover{
	background:#eaeaea;
	color:#333;
}	

.videopost .videopost-meta{
	/*background:url(images/tag.png) no-repeat;
	padding-left:18px;*/
	margin:10px 0;
	height:20px;
}

.videopost .videopost-meta a{
	font-weight: bold;
	color: #999999;
	padding: 2px 10px;
	background: #efefef;
	-moz-border-radius: 8px;
	-webkit-border-radius: 8px;
	text-decoration:none;
	border:1px solid #e0e0e0;
	margin: 0px 1px;
}

.videopost .videoentry{
	line-height:22px;
	font-size:18px;
	line-height:1.4;
	position: relative; /*Posicionamiento absoluto*/
	top: 30%; /*Desde arriba, colocar al 50% de la pantalla*/
	left: 5%; /*Desde la izquierda, colocar al 50% de la pantalla*/
	margin: 10px 0px 0px 0px;
}

