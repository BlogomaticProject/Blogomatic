}

#panes a{
	color:#666;
	text-decoration:none;
}

#panes a:hover{
	color:#0a8ed2;
	text-decoration:underline;
}

#panes div div { 
	overflow: hidden; 
}

#tab_bottom {
	background:url(images/sidebarbottom.gif) no-repeat;
	height:12px;
	width:280px;
	margin-bottom:20px;
}

